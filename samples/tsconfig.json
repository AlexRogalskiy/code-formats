{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "module": "ESNext",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "noEmit": false,
        "moduleResolution": "Node",
        "outDir": "./dist"
    },
    "include": [
        "src/**/*",
        "typings/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
